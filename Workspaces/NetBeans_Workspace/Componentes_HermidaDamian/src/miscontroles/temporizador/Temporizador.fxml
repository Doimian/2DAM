<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import miscontroles.campotextonumerico.CampoTextoNumerico?>

<fx:root style="-fx-border-color: black; -fx-border-width: 2;" type="VBox" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="miscontroles.temporizador.TemporizadorController">
   <children>
      <HBox>
         <children>
            <CampoTextoNumerico fx:id="ctn">
               <HBox.margin>
                  <Insets right="15.0" />
               </HBox.margin>
            </CampoTextoNumerico>
            <Label text="segundos" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <javafx.scene.layout.HBox alignment="CENTER">
          <Label text="Temp: " />
          <Label fx:id="contador" text="0" /> 
          <Label fx:id="magnitud" text="s" />
         <Button fx:id="btnCrear" mnemonicParsing="false" text="Crear Temporizador">
            <HBox.margin>
               <Insets left="15.0" />
            </HBox.margin>
         </Button>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </javafx.scene.layout.HBox>
   </children>
</fx:root>
